<div class="content page_profile">
  <a class="button_back" href="/chats">
    <div class="rotate_svg_180">
      <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="14" cy="14" r="14" fill="#3369F3"/>
        <rect x="8" y="13.2" width="11" height="1.6" fill="white"/>
        <path d="M15 9L19 14L15 19" stroke="white" stroke-width="1.6"/>
      </svg>
    </div>
  </a>

  <div class="profile__content">
    <div class="profile__logo">
    </div>
    <div class="profile__name">{{name}}</div>
    <div class="profile__fields">
      {{#each fields}}
        <div class="profile__field">
          <div class="profile__field-name">{{title}}</div>
          <div class="profile__field-value">{{fieldValue}}</div>
        </div>
      {{/each}}
    </div>
    <div class="profile__buttons">
      <a class="profile__button" href="/profile/edit-info">Edit data</a>
      <a class="profile__button" href="/profile/change-password">Edit password</a>
      <a class="profile__button profile__button_red" href="/">Logout</a>
    </div>
  </div>
</div>
